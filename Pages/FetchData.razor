@page "/loadingtest"
@inject HttpClient Http

<PageTitle>Loading test</PageTitle>
@Component
@code {
    public RenderFragment Component => __builder =>
    {
        <div class="row h-100">
            <div class="col my-auto align-items-center">

            @for(int i = 0; i < 3; i++)
            {
                <div class="row justify-content-center">
                    @for (int j = 0; j < 3; j++)
                    {
                            <div class="spinner-grow m-3" style=@($"width: 3rem; height: 3rem; animation-delay: {(((double)i+j)*0.075):#.##}s") role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    }
                </div>
            }

            </div>
        </div>
    };

    public class WeatherForecast
    {
        public DateOnly Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
